<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_template_form_inherit_3d_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.stock_3d_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Adding a 3D button in product.template form view -->
<!--            <xpath expr="//sheet" position="before">-->
<!--                <header>-->
<!--                    <button type="object" name="action_view_product_3d_button"-->
<!--                            string="3D" id="view_product_3d_button"-->
<!--                            class="btn btn-primary fa fa-lg fa-cubes"-->
<!--                            attrs="{'invisible': [('type', '!=', 'product'), ('length', '=', 0), ('width', '=', 0)]}"/>-->
<!--                </header>-->
<!--            </xpath>-->
            <!-- Adding 3D property fields in product.template form view -->
            <xpath expr="//notebook" position="inside">
                <page string="3D Properties" attrs="{'invisible': [('type', '!=', 'product')]}">
                    <group>
                        <group string="Dimension">
                            <field name="length" attrs="{'required': [('type', '=', 'product')]}"/>
                            <field name="width" attrs="{'required': [('type', '=', 'product')]}"/>
                            <field name="height" attrs="{'required': [('type', '=', 'product')]}"/>
                        </group>
                        <group string="Position">
                            <field name="pos_x" attrs="{'required': [('type', '=', 'product')]}"/>
                            <field name="pos_y" attrs="{'required': [('type', '=', 'product')]}"/>
                            <field name="pos_z" attrs="{'required': [('type', '=', 'product')]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <!-- Client action for 3D view of products -->
    <record id="product_template_3d_action" model="ir.actions.client">
        <field name="name">Product 3D View</field>
        <field name="tag">open_form_3d_view</field>
    </record>
    <data>
        <!-- Adding button to open 3D view in product.template tree view -->
        <record id="view_product_template_tree_inherit_3d_view" model="ir.ui.view">
            <field name="name">product.template.tree.inherit.stock_3d_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="js_class">3d_button_in_stock</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>